---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { SITE_TITLE, SITE_DESCRIPTION, DEFAULT_LANGUAGE } from '~/consts'

export interface Props {
  title?: string;
  description?: string;
	lang?: string;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION, lang = DEFAULT_LANGUAGE } = Astro.props
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
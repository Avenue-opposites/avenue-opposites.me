---
import { type CollectionEntry, getCollection } from 'astro:content'
import BlogPost from '../../layouts/BlogLayout.astro'
import { getContentStatus } from '~/shared'
import { mapAsync } from '~/utils'

export async function getStaticPaths() {
	const posts = await getCollection('posts')

	return mapAsync(
		posts,
		async post => {
			const { birthtime, mtime } = await getContentStatus('posts', post.id)
			// 修改发布时间为文件创建时间
			post.data.publishDate = birthtime
			post.data.updatedDate = mtime

			return {
				params: { slug: post.slug },
				props: post,
			}
		}
	)
}
type Props = CollectionEntry<'posts'>;

const posts = Astro.props

const { Content } = await posts.render()
---

<BlogPost {...posts.data}>
	<Content />
</BlogPost>
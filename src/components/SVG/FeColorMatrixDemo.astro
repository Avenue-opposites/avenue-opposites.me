<svg class="svg-markdown" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
	<filter id="matrix">
		<feColorMatrix id="feColorMatrix" type="saturate" values="3" />
	</filter>
	<image class="transition-all" href="/images/pornhub.png" x="10" y="10" width="80" height="80" filter="url(#matrix)" />
</svg>
<form id="fe-color-matrix" class="flex-center flex-col sm:flex-row mt-4 gap-4">
	<label for="type">
		type：
		<select id="type" class="pl-2 pr-8 py-1 text-sm bg-base-300 rounded" name="type">
			<option selected value="saturate">saturate</option>
			<option value="hueRotate">hueRotate</option>
			<option value="luminanceToAlpha">luminanceToAlpha</option>
			<option value="matrix">matrix</option>
		</select>
	</label>
	<label class="flex items-center" for="values">
		values：
		<textarea
			id="values"
			class="pl-2 py-1 text-sm bg-base-300 rounded h-8"
			name="values"
			set:text="3"
		/>
	</label>
</form>

<script>
const select = document.querySelector('#fe-color-matrix select[name="type"]') as HTMLSelectElement
const feColorMatrix = document.querySelector('#feColorMatrix') as SVGFEColorMatrixElement
const values = document.querySelector('#fe-color-matrix textarea[name="values"]') as HTMLTextAreaElement

select.addEventListener('change', () => {
	feColorMatrix.setAttribute('type', select.value)
})

values.addEventListener('change', () => {
	feColorMatrix.setAttribute('values', values.value)
})
</script>